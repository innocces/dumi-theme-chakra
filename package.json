{
  "name": "dumi-theme-chakra",
  "version": "0.0.7",
  "description": "chakra theme for dumi2",
  "types": "dist/types.d.ts",
  "scripts": {
    "dev": "run-p dev:*",
    "build": "run-s build:*",
    "dev:father": "father dev",
    "dev:example": "pnpm -F ./example run start",
    "build:father": "father build",
    "build:example": "pnpm -F ./example run build",
    "preview": "cd ./serve && deno task dev",
    "up:deps": "pnpm up",
    "prepare": "husky install && father link-dev-theme",
    "lint": "pnpm run lint:es && pnpm run lint:css",
    "lint:css": "stylelint \"{src,test}/**/*.{css,less}\"",
    "lint:es": "eslint \"{src,test}/**/*.{js,jsx,ts,tsx}\"",
    "prepublishOnly": "father doctor && pnpm run build:father",
    "version": "changeset && changeset version",
    "release": "changeset publish"
  },
  "main": "dist/index.js",
  "keywords": [
    "dumi",
    "dumi-theme",
    "chakra"
  ],
  "authors": [
    "innocces<jiangjiangjiangxi@gmail.com>"
  ],
  "license": "MIT",
  "files": [
    "dist"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write --no-error-on-unmatched-pattern"
    ],
    "*.{css,less}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ]
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "peerDependencies": {
    "dumi": "^2.0.12",
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/react": "^18.0.28",
    "@types/react-copy-to-clipboard": "^5.0.4",
    "@types/react-dom": "^18.0.11",
    "@umijs/lint": "^4.0.52",
    "dumi": "^2.1.10",
    "eslint": "^8.34.0",
    "father": "^4.1.5",
    "father-plugin-dumi-theme": "1.0.0-rc.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "prettier-plugin-organize-imports": "^3.2.2",
    "prettier-plugin-packagejson": "^2.4.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stylelint": "^14.16.1"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.0.17",
    "@chakra-ui/react": "^2.5.1",
    "@chakra-ui/theme-tools": "^2.0.16",
    "@docsearch/css": "^3.3.3",
    "@docsearch/react": "^3.3.3",
    "@emotion/react": "^11.10.6",
    "@emotion/styled": "^11.10.6",
    "@makotot/ghostui": "^2.0.0",
    "animated-scroll-to": "^2.3.0",
    "clsx": "^1.2.1",
    "cmdk": "^0.1.22",
    "framer-motion": "^7.10.3",
    "heti": "^0.9.4",
    "prism-react-renderer": "^1.3.5",
    "react-copy-to-clipboard": "^5.1.0",
    "react-icons": "^4.7.1"
  },
  "engines": {
    "node": ">=14"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/innocces/dumi-theme-chakra.git",
    "branch": "main"
  }
}
